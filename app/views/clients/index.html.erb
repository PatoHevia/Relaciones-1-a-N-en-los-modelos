<h1 class="text-center mb-4">Clientes</h1>

<%= link_to 'Nuevo Cliente', new_client_path, class: 'btn btn-success mb-4' %>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Película Arrendada</th>
      <th>Acción</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td>
          <% if client.movie %>
            <%= client.movie.title %>
          <% else %>
            Ninguna
          <% end %>
        </td>
        <td>
          <%= link_to 'Editar', edit_client_path(client), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Eliminar', client, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
